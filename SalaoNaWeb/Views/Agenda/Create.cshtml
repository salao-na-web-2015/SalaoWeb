@model SalaoNaWeb.Models.Agenda

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Cadastro de Agenda</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.nomeFunc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeFunc)
                @Html.ValidationMessageFor(model => model.nomeFunc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dataEHora, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataEHora)
                @Html.ValidationMessageFor(model => model.dataEHora)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.valorServ, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.valorServ)
                @Html.ValidationMessageFor(model => model.valorServ)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
