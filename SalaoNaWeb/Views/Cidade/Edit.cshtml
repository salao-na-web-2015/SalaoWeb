@model SalaoNaWeb.Models.Cidade

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cidade</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.cidID)

        <div class="form-group">
            @Html.LabelFor(model => model.cidNom, new { @class = "control-label col-md-2" })
