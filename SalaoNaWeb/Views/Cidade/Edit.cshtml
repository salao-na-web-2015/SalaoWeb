                @Html.EditorFor(model => model.cidNom)
                @Html.ValidationMessageFor(model => model.cidNom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cidUf, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cidUf)
                @Html.ValidationMessageFor(model => model.cidUf)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span class="input-group-btn">
                    <button class="btn btn-success btn-sm"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
                </span>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" Voltar", "Index", null, new { @class = "btn btn-info glyphicon glyphicon-backward" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
