@model IEnumerable<SalaoNaWeb.Models.Servico>

@{
    ViewBag.Title = "Index";
}

<h3>Cadastro de Servicos</h3>
<hr />
<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeServ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeServ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id=item.servCod }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.servCod }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.servCod })
        </td>
    </tr>
}

</table>
