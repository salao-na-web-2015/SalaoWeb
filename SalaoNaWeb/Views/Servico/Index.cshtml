@model IEnumerable<SalaoNaWeb.Models.Servico>

@{
    ViewBag.Title = "Index";
}

<h2><span>@Html.ActionLink(" Incluir", "Create", null, new { @class = "btn btn-primary glyphicon glyphicon-pencil" })</span></h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeServ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeServ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.ActionLink(" Alterar", "Edit", new { id = item.servId }, new { @class = "btn btn-success btn-sm glyphicon glyphicon-edit" })
            @Html.ActionLink(" Detalhes", "Details", new { id = item.servId }, new { @class = "btn btn-success btn-sm glyphicon glyphicon-list-alt" })
            @Html.ActionLink(" Deletar", "Delete", new { id = item.servId }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove-sign" })
        </td>
    </tr>
}

</table>
