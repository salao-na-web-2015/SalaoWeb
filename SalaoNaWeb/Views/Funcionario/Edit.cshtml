@model SalaoNaWeb.Models.Funcionario

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Funcionario</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.funcId)

        <div class="form-group">
            @Html.LabelFor(model => model.nomeFunc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeFunc)
                @Html.ValidationMessageFor(model => model.nomeFunc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cnpj, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cnpj)
                @Html.ValidationMessageFor(model => model.cnpj)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span class="input-group-btn">
                    <button class="btn btn-success btn-sm"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
                </span>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" Voltar", "Index", null, new { @class = "btn btn-info glyphicon glyphicon-backward" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
