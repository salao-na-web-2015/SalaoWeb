@model SalaoNaWeb.Models.Empresa

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Cadastro de Empresas</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.razSoc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.razSoc)
                @Html.ValidationMessageFor(model => model.razSoc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomFant, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomFant)
                @Html.ValidationMessageFor(model => model.nomFant)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cnpj, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cnpj)
                @Html.ValidationMessageFor(model => model.cnpj)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cidadeNome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cidadeNome)
                @Html.ValidationMessageFor(model => model.cidadeNome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cidadeUf, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cidadeUf)
                @Html.ValidationMessageFor(model => model.cidadeUf)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
