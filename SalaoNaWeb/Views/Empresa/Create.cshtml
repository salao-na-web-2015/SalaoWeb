@model SalaoNaWeb.Models.Empresa

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Empresa</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.razSoc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.razSoc)
                @Html.ValidationMessageFor(model => model.razSoc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomFant, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomFant)
                @Html.ValidationMessageFor(model => model.nomFant)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cnpj, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cnpj)
                @Html.ValidationMessageFor(model => model.cnpj)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cidId, "Cidade", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cidId", "Selecione uma cidade")
                @Html.ValidationMessageFor(model => model.cidId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
